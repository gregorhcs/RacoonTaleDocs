{
    "build": {
        "globalMetadata": {
            "_enableSearch": true,
            "_enableNewTab": true,
            "_disableContribution": true
        },
        "content": [
            {
                "src": ".",
                "files": [
                    "*.yml",
                    "*.md"
                ],
                "dest": "."
            },
            {
                "src": "articles",
                "files": [
                    "**\/*.yml",
                    "**\/*.md"
                ],
                "dest": "articles"
            }
        ],
        "dest": "html",
        "resource": [
            {
                "src": "images",
                "files": [
                    "**\/*.png",
                    "**\/*.jpg",
                    "**\/*.svg",
                    "**\/*.webp"
                ],
                "dest": "images"
            }
        ],
        "template": [
            "default",
            "templates\/singulinkfx+mermaid"
        ]
    }
}